 <% @articles.each do |article| %>

    <div class="article-container">
      <%= article.title %>
      <br>
      <%= article.text %>
      created: <%= article.created_at %>
    </div>
    <div class= "article-nav">
      <%= link_to 'Show', article_path(article.id), class:"article-nav"   %> |
       <%= link_to 'New Comment', new_comment_path(article), class:"article-nav" %> |
       <%= link_to 'Destroy', article_path(article),remote: true,
              method: :delete,
              data: { confirm: 'Are you sure?' },class:"article-nav" %>
    </div>
  <% end %>

