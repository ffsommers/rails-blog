<div class= "center jumbotron">
<div class="container">
	<div class="row">
      	<div class="col-md-8">
      		<div class="card text-xs-center">
      			<div class="card-header">
      				<h3><%= @chat_room.title %></h3>
      			</div>
            <div class="messages">
      			<div class="card-block message-board">
      				<ul class="media-list" id="messages" data-chat-room-id="<%= @chat_room.id %>">
      					<%= render @chat_room.messages %>
      				</ul>
      			</div>
          </div>
      			<div class="card-footer">
      				<%= form_for @message, url: '#' do |f| %>
						<div class="input-group">
							<%= f.text_field :body, placeholder: "Enter Message", class: "form-control" %>
							<span class="input-group-btn">
								<%= f.submit "SEND", class: 'btn btn-info' %>
							</span>
						</div>
					<% end %>
      			</div>
      		</div>
      	</div>
      	<div class="col-md-4">
      		<div class="card">
      			<div class="card-header text-xs-center">
      				<h3>ONLINE USERS</h3>
      			</div>
  				<ul class="list-group list-group-flush text-xs-center" id="appearances">
  					<%= render @appearances %>
  				</ul>
      		</div>
      	</div>
	</div>
</div>
</div>